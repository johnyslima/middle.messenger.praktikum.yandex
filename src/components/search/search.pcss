.search-field {
  box-shadow: 0px 0px 3px var(--borderColor);
  border: 1px solid var(--borderColor);
  border-radius: 12px;
  background-color: var(--backgroundColor);
  width: 100%;
  color: var(--textColorRegular);
  padding: 10px;
  outline: 0;
  outline-offset: 0;
  box-sizing: border-box;

  &::placeholder {
    text-align: center;
  }

  &:focus-visible,
  &:focus,
  &:active {
    box-shadow: 0px 0px 3px var(--borderColor);
  }
}
