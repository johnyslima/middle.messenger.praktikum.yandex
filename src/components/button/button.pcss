.button {
  cursor: pointer;
  border-width: 0;
  border-radius: 7px;
  width: 280px;
  height: 37px;
  padding: 0;
  font-size: 13px;
  line-height: 13px;
}

.button--primary {
  background-color: var(--primaryColor);
  color: var(--textColorRegular);
}

.link-button {
  color: var(--primaryColor);
}
