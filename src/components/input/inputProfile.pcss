.input-profile,
div.input-profile {
  color: var(--grayColor);
  border: none;
  background-color: var(--backgroundColor);
  width: 280px;
  text-align: right;

  &:active,
  &:focus {
    outline: 0;
    outline-offset: 0;
  }

  &:hover {
    cursor: pointer;
  }
}

div.input-profile {
  font-size: 13px;
  line-height: 13px;

  &:hover {
    cursor: default;
  }
}
