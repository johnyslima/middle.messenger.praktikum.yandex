@font-face {
  font-family: Inter;
  src: url("../assets/fonts/Inter-Regular.otf");
  font-weight: 500;
  font-style: normal;
}

@font-face {
  font-family: Inter;
  src: url("../assets/fonts/Inter-Medium.ttf");
  font-weight: 500;
  font-style: normal;
}

@font-face {
  font-family: Inter;
  src: url("../assets/fonts/Inter-SemiBold.ttf");
  font-weight: 600;
  font-style: normal;
}

body {
  background-color: var(--backgroundColor);
  font-family: Inter, sans-serif;
  font-weight: 500;
  height: 100vh;
  margin: 0;
  color: var(--textColorRegular);
}

#root,
main {
  height: inherit;
}

.main {
  z-index: 1;
  padding: 20px;
  span {
    cursor: pointer;

    &:hover {
      color: var(--borderColor);
    }
  }
}

.error-valid {
  color: red;
  padding-top: 7px;
  font-size: 10px;
}

.loader {
  main {
    width: 100%;
    height: 100%;
    opacity: 0.1;
  }
}

.loader:before {
  content: "";
  width: 16px;
  height: 16px;
  border-radius: 50%;
  display: block;
  margin: 15px auto;
  z-index: 1000000;
  position: fixed;
  top: 50%;
  left: 50%;
  background: rgba(46, 6, 6, 0.185);
  box-shadow: -24px 0 #fff, 24px 0 #fff;
  box-sizing: border-box;
  animation: shadowPulse 2s linear infinite;
}

@keyframes shadowPulse {
  33% {
    background: #fff;
    box-shadow: -24px 0 #07847e, 24px 0 #fff;
  }
  66% {
    background: #633bbc;
    box-shadow: -24px 0 #fff, 24px 0 #fff;
  }
  100% {
    background: #fff;
    box-shadow: -24px 0 #fff, 24px 0 #07847e;
  }
}

.show {
  display: block;
}

.hide {
  display: none;
}
