.chat {
  display: flex;
  height: inherit;

  &-left-field {
    border-right: 1px solid var(--borderColor);
    width: 310px;
    min-width: 310px;
    overflow: hidden;
    height: inherit;

    &__profile-link {
      display: flex;
      justify-content: flex-end;
      margin: 15px 10px 20px;
      font-size: 12px;
      line-height: 12px;
      cursor: pointer;

      a {
        color: var(--grayColor);
        text-decoration: none;
      }
    }

    &__search {
      padding: 0px 10px 15px;
      margin-right: 10px;

      .input-field {
        border: 1px solid var(--borderColor);
        border-radius: 12px;
        padding-left: 10px;

        &:focus {
          border-width: 2px;
        }
      }
    }
  }

  &-right-field {
    height: 100vh;
    width: 100%;
    padding: 0px 20px;

    .chat-room-header {
      height: 54px;
      border-bottom: 1px solid var(--borderColor);
      display: flex;
      align-items: center;

      &__avatar {
        margin-right: 10px;
        width: 34px;
        height: 34px;
        background-color: #efefef;
        border-radius: 50%;
      }

      &__name {
        margin-left: 10px;
        display: flex;
        width: 100%;
        justify-content: space-between;
        align-items: center;

        &__context-menu-button,
        &__context-attachment-button {
          width: 30px;
          height: 30px;
          border-radius: 100%;
          display: flex;
          justify-content: center;
          align-items: center;
          background-color: var(--backgroundColor);
          border: 0px;

          &:hover {
            background-color: var(--primaryColor);
          }
        }

        &__context-attachment-tooltip,
        &__context-menu-tooltip {
          ul {
            list-style-type: none;
            padding: 0px;
            margin: 0px;

            li {
              display: flex;
              align-items: center;
              padding: 10px 15px;

              &:hover {
                background-color: var(--currentColor);
                border-radius: 12px;
                cursor: pointer;
              }

              img {
                width: 22px;
                margin-right: 15px;
              }
            }
          }
        }

        &__context-attachment-tooltip {
          position: absolute;
          bottom: 40px;
          left: -40px;
        }

        &__context-menu-tooltip {
          position: absolute;
          left: -130px;
          top: 20px;
        }
      }
    }

    .chat-room-content {
      height: calc(100% - 110px);
      overflow: scroll;

      &::-webkit-scrollbar {
        width: 0px;
      }
      &__date {
        color: var(--grayColor);
        font-size: 12px;
        line-height: 12px;
        width: inherit;
        text-align: center;
        margin: 30px 0px;
      }
    }

    .chat-room__send-message-panel {
      height: 54px;
      width: 100%;
      border-top: 1px solid var(--borderColor);
      display: flex;
      align-items: center;
    }
  }
}
