<div class="login">
  {{#extend "form-layout"}}
  {{#content "title"}}
  <div>{{ login.title }}</div>
  {{/content}}
  {{#content "body"}}
  <div class="form-content__input">
    {{> input placeholder="Логин" type="text" inputName="login" }}
  </div>
  <div class="form-content__input">
    {{> input placeholder="Пароль" type="password" inputName="password" }}
  </div>
  {{/content}}
  {{#content "footer"}}
  <div class="form-footer__button">
    {{> button label=login.buttonLabel action="goToPage('chat')" }}
  </div>
  <div class="form-footer__link">
    <a onclick="goToPage('signin')">Нет аккаунта?</a>
  </div>
  {{/content}}
  {{/extend}}
</div>
